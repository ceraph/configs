! Extensions
URxvt.perl-ext-common: font-size

! font-size
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal

Xcursor.theme: Breeze-Hacked
Xcursor.size: 24

!-------------------------------------------------------------------------------
! urxvt setup

! Xft settings -----------------------------------------------------------------

!DPI scales everything
Xft.dpi: 144
Xft.autohint: false
Xft.lcdfilter: lcddefault
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.antialias: true
Xft.rgba: bgr

urxvt*perl-ext: default,tabbedex,clipboard-osc,remote-clipboard

urxvt*scrollBar: false
urxvt*saveLines: 3200

!urxvt.font: xft:Inconsolata:size=14,xft:Symbola
!urxvt.font: xft:Anonymous\ Pro:size=12,xft:Symbola
!urxvt.font: xft:Fantasque\ Sans\ Mono:pixelsize=23,xft:Symbola
urxvt.font: xft:Hermit:pixelsize=20:style=medium,xft:Symbola
!urxvt.font: xft:DEC\ Terminal\ Modern:size=14,xft:Symbola
!urxvt*letterSpace: -1
!urxvt*lineSpace: 2

!urxvt*background: Black
urxvt.underlineColor: yellow
!urxvt*foreground: #BBBBBB
urxvt.cursorBlink: true
urxvt.cursorColor: #BBBBBB
!urxvt.tabbed.tabbar-fg: 8
!urxvt.tabbed.tabbar-bg: 0
!urxvt.tabbed.tab-fg:    10
!urxvt.tabbed.tab-bg:    0
urxvt.urlLauncher: /usr/bin/chromium
urxvt.matcher.button:   1
urxvt.transparent: true
urxvt.shading: 10
urxvt.fading: 10

urxvt*internalBorder: 0
urxvt*borderLess: false

! Fix home and end key
urxvt*keysym.Home: \033OH
urxvt*keysym.End: \033OF

!-------------------------------------------------------------------------------
! Colorscheme

! Hybrid Terminal Colours. Uses the palette from Tomorrow-Night:
! https://github.com/chriskempson/tomorrow-theme/blob/master/vim/colors/Tomorrow-Night.vim
! and the reduced contrast background color from Codecademy online editor:
! https://www.codecademy.com/learn
! vim: ft=xdefaults

!*background: #232C31
!*foreground: #C5C8C6
!! black
!*color0: #2D3C46
!*color8: #425059
!! red
!*color1: #A54242
!*color9: #CC6666
!! green
!*color2: #8C9440
!*color10: #B5BD68
!! yellow
!*color3: #DE935F
!*color11: #F0C674
!! blue
!*color4: #5F819D
!*color12: #81A2BE
!! magenta
!*color5: #85678F
!*color13: #B294BB
!! cyan
!*color6: #5E8D87
!*color14: #8ABEB7
!! white
!*color7: #6C7A80
!*color15: #C5C8C6


! PaperColour Theme

URxvt.foreground: #4D4D4C
URxvt.background: #EEEEEE

! black
URxvt.color0: #EDEDED
URxvt.color8: #969694

! red
URxvt.color1: #D7005F
URxvt.color9: #D7005F

! green
URxvt.color2: #718C00
URxvt.color10: #718C00

! yellow / orange
URxvt.color3: #D75F00
URxvt.color11: #D75F00

! blue

URxvt.color4: #4271AE
URxvt.color12: #4271AE

! magenta
URxvt.color5: #8959A8
URxvt.color13: #8959A8

! cyan
URxvt.color6: #3E999F
URxvt.color14: #3E999F

! white
URxvt.color7: #4D4D4C
URxvt.color15: #F5F5F5


! Rofi

rofi.color-enabled: true
rofi.color-window: #2b303b, #2b303b, #65737e
rofi.color-normal: #2b303b, #eff1f5, #2b303b, #65737e, #eff1f5
rofi.color-active: #2b303b, #a3be8c, #2b303b, #65737e, #a3be8c
rofi.color-urgent: #2b303b, #ebcb8b, #2b303b, #65737e, #ebcb8b

rofi.bw: 0
rofi.font: Roboto Mono 14
rofi.lines: 16
rofi.separator-style: none
rofi.padding: 20

rofi.run-command: zsh -c "{cmd}"
