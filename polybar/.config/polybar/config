[module/battery]
inherit = module/theme
type = custom/script
; From noto font symbols2.
exec = "count=$(acpi -b | wc -l); sum=$(acpi -b | egrep -o '[0-9]{1,3}%' | tr -d '%' | xargs -I% echo -n '+%'); echo üó≤ $(( sum / count ))%"
format-underline = #ffb52a

